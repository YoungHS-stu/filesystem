{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build", 
            "type": "shell", 
            "command": "g++", 
            "args": [    
                "${file}", 
                "-o", 
                "${workspaceFolder}/src/minishell.exe", 
                "-g", 
                "-Wall", 
                "-static-libgcc",  
                "-std=c11"
            ],
            "group": {  
                "kind": "build",
                "isDefault": true
            },
            "presentation": { 
                "echo": true,
                "reveal": "always", 
                "focus": false, 
                "panel": "new" 
            },
            "problemMatcher": "$gcc" 
        },
        {
            "label": "run", 
            "type": "shell", 
            "dependsOn": "build", 
            "command": "${workspaceFolder}/src/minishell.exe", 
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true, 
                "panel": "new"
            }
        }

    ]
}